<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/Vendors/Bootstrap/Styles/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Styles/Site.css" />
    <link rel="stylesheet" href="~/Content/Styles/Messaging.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

    <link rel="icon" href="~/Content/Images/logo-small.png" />

    <script src="~/Scripts/jquery-2.2.1.min.js"></script>
    <script src="~/Vendors/Bootstrap/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#messegerNavbar" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <img class="navbar-brand" src="~/Content/Images/logo-small.png" />
                        <div class="navbar-brand">@User.Identity.Name</div>
                    </div>
                    <div class="collapse navbar-collapse" id="messegerNavbar">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="#">Settings</a></li>
                            <li>@Html.ActionLink("Sign Out", "SignOut", "Account")</li>
                        </ul>
                    </div>                    
                </div>
            </nav>
        </div>
        <div class="row">
            <div class="col-md-12">
                @RenderBody()
            </div>
        </div>        
    </div>
</body>
</html>
