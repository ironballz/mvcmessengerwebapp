@model MessengerWebApp.ViewModels.SignInViewModel

@{
    ViewBag.Title = "Sign In";
    Layout = "~/Views/Shared/_SignInLayout.cshtml";
}

<h2>Sign In</h2>
<div class="form-change-link">
    or @Html.ActionLink("register", "Register")
    if you do not have an account
</div>

@using (Html.BeginForm("SignIn", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.DisplayNameFor(m => m.Login)
        @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(m => m.RememberMe)
        @Html.DisplayNameFor(m => m.RememberMe)
    </div>

    <input type="submit" class="btn btn-primary btn-block" value="Sign In" />    

    <div>
        @Html.ValidationSummary(string.Empty, new { @class = "text-danger" })
    </div>
}
