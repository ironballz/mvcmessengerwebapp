@model MessengerWebApp.ViewModels.ChangePasswordViewModel

@{
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
    ViewBag.Title = "Change password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Change your account password</h2>
<div class="form-change-link">
    or @Html.ActionLink("return to the chat", "Index", "Chat")
    to continue conversation
</div>

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @Html.DisplayNameFor(m => m.OldPassword)
                @Html.PasswordFor(m=>m.OldPassword, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(m => m.NewPassword)
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(m => m.ConfirmNewPassword)
                @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control" })
            </div>

            <input type="submit" class="btn btn-primary btn-margin-top" value="Change password" />

            @if (ViewBag.SuccessMessage != null)
            {
                <div class="text-success save-success">@ViewBag.SuccessMessage</div>
            }
            <div>
                @Html.ValidationSummary(string.Empty, new { @class = "text-danger" })
            </div>
        </div>
    </div>
}


