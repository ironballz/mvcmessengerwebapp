@model MessengerWebApp.ViewModels.ProfileEditViewModel

@{
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
    ViewBag.Title = "Edit profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit your profile data</h2>
<div class="form-change-link">
    or @Html.ActionLink("return to the chat", "Index", "Chat")
    to continue conversation
</div>

@using (Html.BeginForm("EditProfile", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @Html.DisplayNameFor(m => m.FirstName)
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(m => m.LastName)
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(m => m.IdleTimeout)
                @Html.DropDownList("IdleTimeout", null, new { @class = "form-control" })
            </div>

            <input type="submit" class="btn btn-primary btn-margin-top" value="Save changes" />

            @if (ViewBag.SuccessMessage != null)
            {                
                <div class="text-success save-success">@ViewBag.SuccessMessage</div>
            }
            <div>
                @Html.ValidationSummary(string.Empty, new { @class = "text-danger" })
            </div>
        </div>
    </div>    
}

